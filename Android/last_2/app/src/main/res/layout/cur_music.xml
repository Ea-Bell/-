<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabCurMusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/curAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:text="노래 제목"
            android:fontFamily="@font/font"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/curArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:text="가수명"
            android:fontFamily="@font/applemint"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/curImg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:padding="30dp"
            android:src="@drawable/ic_cur_img" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/curSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progressBackgroundTint="#000000"
        android:progressTint="#F7E600"
        android:thumb="@drawable/ic_cur_circle"
        android:thumbTint="#F7E600"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0:00"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginRight="15dp"
            android:text="0:00"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btnBack10"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#303030"
                android:src="@drawable/ic_cur_back10" />


            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#303030"
                android:src="@drawable/ic_cur_back" />

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="50dp"
                android:background="#303030"
                android:src="@drawable/ic_cur_pause" />

            <ImageButton
                android:id="@+id/btnFor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#303030"
                android:src="@drawable/ic_cur_forward" />

            <ImageButton
                android:id="@+id/btnFor10"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#303030"
                android:src="@drawable/ic_cur_for10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>